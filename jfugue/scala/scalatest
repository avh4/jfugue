#sh

CLASSPATH=$CLASSPATH:scalatest-1.3.jar:../target/jfugue-4.1.0.jar
# CLASSPATH=$CLASSPATH:asm-1.3.4.jar:asm-util-1.3.4.jar:aspectwerkz-core-0.8.1.jar:easymock-3.0.jar:objenesis-1.2.jar:cglib-2.2.jar

if [ $1.scala -nt $1.class ]
then
    echo "Compiling..."
    scalac $1.scala
fi
echo "Running..."
scala org.scalatest.tools.Runner -p . -o -s $1